Host github.com
  Hostname github.com
  User git
  PreferredAuthentications publickey
  IdentityFile ~/.ssh/<github-private-key>

Host server1
  Hostname <server-ip>
  User <server-user>
  IdentityFile ~/.ssh/<user-private-key>

Host server2
  Hostname <server-ip>
  User <server-user>
  IdentityFile ~/.ssh/<user-private-key>

Host server3
  Hostname <server-ip/url>
  User <server-user>
  IdentityFile ~/.ssh/<user-private-key>
